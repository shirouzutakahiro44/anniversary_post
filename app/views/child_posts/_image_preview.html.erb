<div class="form-group" data-controller="previews">
    <%= form.label :image%><span class="input-need">※必須</span><br>
    <%= form.file_field :image,
    class: 'form-control', id: 'child_post_content',
    direct_upload: true,
    data: { action: "change->previews#preview", previews_target: "input" } %>

    <div>
      <% if @child_post.persisted? && @child_post.image.attached? %>
        <%= image_tag @child_post.image, data: { previews_target: "preview" } %>
      <% else %>
        <img data-previews_target="preview" src="" alt="Image preview...">
      <% end %>
    </div>
</div>